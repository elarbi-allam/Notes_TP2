<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA"
    tools:context=".DetailsNoteActivity">

    <TextView
        android:id="@+id/tvDetailsNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de la Note"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDetailsPrio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Priorité : Haute"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#D32F2F"
        android:layout_marginBottom="24dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDetailsDesc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Ceci est le contenu détaillé de la note..."
        android:textSize="18sp"
        android:lineSpacingExtra="4dp"
        android:textColor="#424242"
        android:gravity="top|start"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour à la liste"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"/>

</LinearLayout>